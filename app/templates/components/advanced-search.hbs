<h1>Broken Consort</h1>

{{#ui-search source=pool allowAdditions=true onSelect=(action "applyFilter") }}
  <input class="prompt" type="text" placeholder="search songs">
  <div class="results"></div>
{{/ui-search}}

<div class="ui form">
  <div class="ui dividing header">Filters</div>
  <div class="fields">
    <div class="field">
      {{#ui-dropdown class="selection"}}
        <div class="default text">Field</div>
        <i class="dropdown icon"></i>
        <div class="menu">
          {{#each-in labels as |field label|}}
            <div class="item" data-value="{{field}}">
              {{label}}
            </div>
          {{/each-in}}
        </div>
      {{/ui-dropdown}}
    </div>
    <div class="field">
      {{#ui-dropdown class="search selection" allowAdditions=true minCharacters=2}}
        <div class="default text">Filter Value</div>
        <div class="menu">
          <div class="item">
            <b>Beep</b> Boop
          </div>
        </div>
      {{/ui-dropdown}}
    </div>
  </div>
</div>

<button class="ui button">Add new filter</button>